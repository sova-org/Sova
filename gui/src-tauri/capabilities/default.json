{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-destroy",
    "core:window:allow-close",
    "opener:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/sova_server",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-spawn",
    "shell:allow-kill"
  ]
}
