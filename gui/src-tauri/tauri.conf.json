{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sova",
  "version": "0.1.0",
  "identifier": "com.sova.app",
  "build": {
    "beforeDevCommand": "./scripts/build-sidecar.sh && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "./scripts/build-sidecar.sh && pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Sova",
        "width": 800,
        "height": 600,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/sova_server"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
